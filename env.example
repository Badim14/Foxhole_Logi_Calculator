# Пример файла переменных окружения
# Скопируйте этот файл в .env и настройте под свои нужды

# Основные настройки приложения
NODE_ENV=development
PORT=3000

# Настройки базы данных
# Вариант 1: Строка подключения
DATABASE_URL=postgres://foxhole:password@localhost:5432/foxhole

# Вариант 2: Отдельные параметры
DB_HOST=localhost
DB_PORT=5432
DB_NAME=foxhole
DB_USER=foxhole
DB_PASSWORD=password

# Логирование
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Для разработки
DEBUG=* 